{# On étend notre layout #}
{% extends "PouceSiteBundle::layout.html.twig" %}

{% block javascript %}

	{% javascripts filter='?yui_js'
		'js/jquery-ui.js'
		'js/autocompleter-jqueryui.js'
		'js/position.js' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}

{% endblock %} 

{# Dans notre layout, il faut définir le block body #}
{% block site_body %}

	<h4>Création d'une nouvelle édition</h4>

	<form method="post" {{ form_enctype(form) }} action="{{ path('pouce_superAdmin_add_school')}}">

		{# Les erreurs générales du formulaire. #}
		{{ form_errors(form) }}

		<div class="row">
			<div class="col s12 m6">
				{{ form_row(form.name) }}
			</div>
			<div class="col s12 m6">
				{{ form_row(form.sigle) }}
			</div>
		</div>

		<div class="row">
			{{ form_row(form.telephone) }}
		</div>

		<div class="row">
			{{ form_row(form.address) }}
		</div>

		<div class="input-field row">

			<div class="col s12 m6">
				<div class="dropdown-button" data-activates="ui-id-1">
					<label for="city">Ville</label>
					<div id='city'></div>
				</div>
			</div>

			<div class="col s12 m6">
			  	<input type="text" name="pays" id="pays" placeholder="Pays">
			 </div>

	  	</div>

		<input type="submit" class="btn btn-primary" /> 
	</form>

{% endblock %}