{# src/OC/PlatformBundle/Resources/views/Advert/form.html.twig #}

{# On étend notre layout #}
{% extends "PouceSiteBundle::layout.html.twig" %}

{% block javascript %}

	{% javascripts filter='?yui_js'
		'js/jquery-ui.js'
		'js/autocompleter-jqueryui.js'
		'js/position.js' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}

{% endblock %} 

{# Dans notre layout, il faut définir le block body #}
{% block site_body %}

	<h3>Rentre le résultat de ta course</h3>

	<form method="post" {{ form_enctype(resultForm) }} action="{{ path('pouce_result_add')}}">

		{# Les erreurs générales du formulaire. #}
		{{ form_errors(resultForm) }}

		<p>
			Blablabla
		</p>

		<h4>Votre destination</h4>

		<p>
			Destination la plus loin atteinte : 		
			<div class="row">

				<div class="col s12 m6">
					<div class="dropdown-button" data-activates="ui-id-1">
						<div id='city'></div>
					</div>
				</div>

				<div class="col s12 m6">
					<select disabled id="pays">
					    <option value="1" disabled selected>Pays</option>
				  	</select>
				  </div>

		  	</div>

			Avez-vous réussit à revenir en stop ? : 

			<div class="switch">
				<label>
					Non {{ form_widget(resultForm.isValid) }}
					<span class="lever"></span>
					Oui
				</label>
			</div>
			Êtes-vous arrivé à temps ? : 
			<div class="switch">
				<label>
					Non <input type="checkbox"> {# {{ form_widget(resultForm.isValid) }} #}
					<span class="lever"></span>
					Oui
				</label>
			</div>
			De combien de temps étiez-vous en retard ? : {{ form_row(resultForm.lateness) }}
		</p>

{# 		{{ form_rest(resultForm) }} #}

		<input type="submit" class="btn btn-primary" /> 
	</form>

	<script>
		$(document).ready(function() {
			$('select').material_select();
		});
	</script>

{% endblock %}