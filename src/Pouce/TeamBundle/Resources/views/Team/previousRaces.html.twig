{% for team in teams %}
	
<div class="row">
	<div class="col s12 m12">
		<div class="card blue-grey darken-1">
			<div class="card-content white-text">
				<span class="card-title">Edition du {{ team.edition.dateOfEvent | date('d-m-Y') }}</span>
				<p>
					Ça y est, tu as fini ta course. <br/>
					Viens valider ta destination pour apparaitre dans le classement final et partager ton aventure avec tout le monde.
				</p>
			</div>
			<div class="card-action">
				<div class="row">
					{% if team.result != NULL %}
						{% if team.result.isValid==0 %}
							<div class="col s12 m6">
								<a class="waves-effect waves-light btn" href="{{ path('pouce_result_edit',{'editionId': 'team.edition.id' })}}">Valider sa destination</a>
							</div>
						{% else %}
							<div class="col s12 m6">
								<a class="waves-effect waves-light btn" href="{{ path('pouce_result_edit',{'editionId': 'team.edition.id' })}}">Modifier sa destination</a>
							</div>
						{% endif %}
					{% else %}
						<div class="col s12 m6">
							<a class="waves-effect waves-light btn" href="{{ path('pouce_result_add',{'editionId': 'team.edition.id' })}}">Ajouter sa destination</a>
						</div>
					{% endif %}

					{% if team.result.comment == NULL %}
						<div class="col s12 m6">
							<a class="waves-effect waves-light btn" href="#">Raconter son aventure</a>
						</div>
					{% else %}
						<div class="col s12 m6">
							<a class="waves-effect waves-light btn" href="#">Voir son récit</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>

{{ dump(team) }}

{% endfor %}