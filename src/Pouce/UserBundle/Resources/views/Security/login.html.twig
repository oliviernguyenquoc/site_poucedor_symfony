{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="row">
	<h1 class="center-align">Connexion</h1>

	<form class=" col s12 m6 offset-m3" action="{{ path("fos_user_security_check") }}" method="post">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	    <div class="input-field">
		    <label for="username">Email</label>
		    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
		</div>

		<div class="input-field">
		    <label for="password">Mot de passe</label>
		    <input type="password" id="password" name="_password" required="required" />
		</div>
		<br/>

	    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
	    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
	    <br/>
	    <br/>

	    <button class="btn waves-effect waves-light" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />Connexion 
	    	<i class="material-icons right">send</i>
	    </button>
	</form>
</div>


{% endblock fos_user_content %}
