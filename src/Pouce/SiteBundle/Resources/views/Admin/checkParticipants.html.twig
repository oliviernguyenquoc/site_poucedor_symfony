{# On étend notre layout #}
{% extends "PouceSiteBundle::layout.html.twig" %}

{# Dans notre layout, il faut définir le block body #}
{% block site_body %}

	{{ dump(teams) }}

<ul class="collection">
	<li class="collection-item">
		{% for team in teams %}
			<h4>
				{{team.0.teamName}}
			</h4>
			<p>
			<div class="row">
				<div class="col s12 m4 center-on-small-only">
					<div class="row">
						{% for user in team.0.users %}
							<div class="col s12 m6">
				        		<img class="circle responsive-img" src="{{ ('/images/profil/' ~ user.imageName) | imagine_filter('my_thumb') }}">
				        	</div>
				        {% endfor %}
				    </div>
				    <div class="row center-align">
				    	{# TODO Change path and add position function #}
				    	<a href="{{path('pouce_site_galery')}}" class="waves-effect waves-light btn-large">Ajouter leur position</a>
				    </div>
				</div>
        		{% for user in team.0.users %}
        			<div class="col s12 m4">
	        			<ul class="collection">
	        				<li class="collection-item">
	        					<h5>{{user.firstName}} {{user.lastName}}</h5>
	        				</li>
	        				<li class="collection-item">
	        					<b>Sexe :</b> {{user.sex}}
	        				</li>
	        				<li class="collection-item">
	        					<b>Telephone :</b> {{user.telephone}}
	        				</li>
	        				<li class="collection-item">
	        					<b>Promotion :</b> {{user.promotion}}
	        				</li>
	        				<li class="collection-item">
	        					<b>Email :</b> {{user.email}}
	        				</li>
	        			</ul>
        			</div>
				{% endfor %}
	        </div>
	        <div class="row">
        	{% for position in team.1 %}
        		<div class="col s12 m4">
        			{{ position.city.country }}
        			<br/>
        			{{ position.city.name }}
        		</div>
        		<div class="col s12 m4">
        			{{ position.date }}
        		</div>
        		<div class="col s12 m4">
        		</div>
        	{% endfor %}
	        </div>
			</p>
		{% endfor %}
	</li>
</ul>

{% endblock %}

{% block javascript %}
    {{ parent() }}

	<script>
	  $(document).ready(function(){
	    $('.collapsible').collapsible({
	      accordion : true
	    });
	  });
	</script>

{% endblock %} 