{% extends "PouceSiteBundle::layout.html.twig" %}

{% block stylesheets %}

	{% stylesheets filter='cssrewrite, ?yui_css'
  		'css/sir-trevor.css'
  		'css/sir-trevor-icons.css' %}
  		  <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
	{% endstylesheets %}

	{# Sir-trevor #}
	{# <link rel="stylesheet" type="text/css" href="{{ asset('css/sir-trevor.css') }}"/>
	<link rel="stylesheet" type="text/css" href="{{ asset('css/sir-trevor-icons.css') }}"/> #}

{% endblock %}

{% block javascript %}

	{% javascripts filter='?yui_js'
		'js/underscore.js'
		'js/eventable.js'
		'js/sir-trevor.js' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}

	{# Sir-trevor #}
	{# <script src="{{ asset('js/underscore.js') }}"></script>
	<script src="{{ asset('js/eventable.js') }}"></script>
	<script src="{{ asset('js/sir-trevor.js') }}"></script> #}
	
{% endblock %}

{% block site_body %}


	<div class="fotorama" 
		data-allowfullscreen="true" 
		data-nav="thumbs"
		data-arrows="true"
	    data-click="true"
	    data-swipe="true"
	    data-width="100%"
     	data-ratio="800/600"
     	data-maxwidth= "600">

		{% for image in imageArray %}
			<img src="{{ asset(image.url) }}">
		{% endfor %}
	</div>


	<!-- fotorama.css & fotorama.js. -->
<link  href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet"> <!-- 3 KB -->
<script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script> <!-- 16 KB -->


{% endblock %}